    <![endif]-->
</head>
<body class="skin-blue">
    @if (Session["rol"] != null) { 
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("Index","Home")" class="logo"><b>Inicio</b></a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            @{
                                sarey_erp.Models.usuarios usuario = sarey_erp.Models.usuarios.obtenerUsuario(@Session["nombre"].ToString());
                            }
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!--<img src="/admin/dist/img/user2-160x160.jpg" class="user-image" alt="User Image" />-->
                                <span class="hidden-xs">@usuario.nombreCompleto</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header" style="max-height:80px !important">
                                    <!--<img src="/admin/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />-->
                                    <p>
                                        @usuario.nombreCompleto - @usuario.rol
                                        <small>@usuario.cargo</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-right">
                                        <a href="@Url.Action("cambiarContraseña", "Home")" class="btn btn-info btn-flat">Cambiar Contraseña</a>
                                        <a href="@Url.Action("cerrarSesion", "Home")" class="btn btn-default btn-flat">Cerrar Sesión</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">MENÚ PRINCIPAL</li>
		    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-share"></i> <span>Órdenes de Compra</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/SolicitudMateriales/todos"><i class="fa fa-circle-o"></i> Solicitudes de Materiales</a></li>
                            <li><a href="/Ordendecompra/todas"><i class="fa fa-circle-o"></i> Órdenes de Compra</a></li>
                            <li><a href="/HojaRuta"><i class="fa fa-circle-o"></i> Hojas de Ruta</a></li>
                            <li>
                                <a href="#"><i class="fa fa-circle-o"></i> Administración de Datos <i class="fa fa-angle-left pull-right"></i></a>
                                <ul class="treeview-menu">
                                    <li><a href="/Faenas"><i class="fa fa-circle-o"></i> Faenas</a></li>
                                    <li><a href="/Proveedor/todos"><i class="fa fa-circle-o"></i> Proveedores</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index","Trabajador")"><i class="fa fa-cart-arrow-down"></i> Trabajadores</a></li>
                    <li><a href="@Url.Action("Index","Liquidaciones")"><i class="fa fa-cart-arrow-down"></i> Revisar Liquidaciones</a></li>
                    <li><a href="@Url.Action("verTodos","finiquitos")"><i class="fa fa-cart-arrow-down"></i> Ver Finiquitos</a></li>
                    <li><a href="@Url.Action("Index","detalleInventario")"><i class="fa fa-cart-arrow-down"></i> Inventario</a></li>
                    @if (Session["rol"].Equals("gerencias") || Session["rol"].Equals("admin"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-share"></i> <span>Control de Usuarios</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("Index","Usuarios")"><i class="fa fa-circle-o"></i> Ver Todos</a></li>
                                <li><a href="@Url.Action("Nuevo","Usuarios")"><i class="fa fa-circle-o"></i> Agregar Nuevo</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        @RenderBody()

        @*<footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.0
        </div>
        <strong>Copyright &copy; 2014-2015 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights reserved.
    </footer> @**@
    </div><!-- ./wrapper -->
    }
    else 
    {
        @RenderBody()
    }
