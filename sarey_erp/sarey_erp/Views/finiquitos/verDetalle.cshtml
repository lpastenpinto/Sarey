@{
    ViewBag.Title = "Trabajador";
    sarey_erp.Models.finiquitos Finiquito = new sarey_erp.Models.finiquitos();// ViewData["solicitud"];
    Finiquito = (sarey_erp.Models.finiquitos)ViewData["finiquito"];
   
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="text-center">Detalle Finiquito @Finiquito.nombre_completo</h1>
            <br />
            <div class="row">
                <div class="clearfix"></div>
                <div class="col-sm-12">
                   
                    <table class="table table-bordered table-striped table-hover" style="border: 1px solid black !important">
                        <tbody>
                            @{

                                <tr>
                                    <td class="col-sm-6" style="border: 1px solid black !important">Rut</td>
                                    <td style="border: 1px solid black !important">@Finiquito.rut</td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black !important">Nombre</td>
                                    <td style="border: 1px solid black !important">@Finiquito.nombre_completo</td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black !important">Fecha Finiquito</td>
                                    <td style="border: 1px solid black !important">
                                        @{   string fechaEmpresa = Convert.ToString(@Finiquito.fecha_finiquito);
                                           string[] arreglo = fechaEmpresa.Split(' ');
                                           ViewBag.fechaEmpresa = arreglo[0];
                                        }
                                        @ViewBag.fechaEmpresa

                                    </td>
                                </tr>                                
                                <tr>
                                    <td style="border: 1px solid black !important">Motivo</td>
                                    <td style="border: 1px solid black !important">@Finiquito.motivo</td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black !important">Detalle Motivo</td>
                                    <td style="border: 1px solid black !important">@Finiquito.detalle_motivo</td>
                                </tr>
                                                                                           
                                <tr>
                                    <td style="border: 1px solid black !important">Total</td>
                                    <td style="border: 1px solid black !important">$@(new sarey_erp.Models.formatearString().valoresPesos(@Finiquito.total_finiquito)) </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
