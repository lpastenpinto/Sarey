@model sarey_erp.Models.hojaRutaFactura

@{
    ViewBag.Title = "editar datos de contabilidad";
}

<div class="content-wrapper" style="min-height: 1000px !important;">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="header">
            <h1>Datos de Contabilidad <small>Hoja de Ruta - Factura de Proveedores</small></h1>
        </div>
        <div class="clearfix"></div>
        <hr style="border-color:#000 !important" />
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <form role="form" method="post" action="@Url.Action("metodoAgregarContabilidad", "HojaRuta")" enctype="multipart/form-data">
                    <div class="form-group">
                        <div id="divNombreNombre" class="form-group">
                            <label class="control-label">Número de Orden de Compra:</label>
                            <input type="text" class="form-control" name="numeroOrdenCompra" id="numeroOrdenCompra"
                                   value="@Model.numeroOrdenCompra" required readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Número de Factura:</label>
                        <input type="text" class="form-control" name="numeroFactura" id="numeroFactura"
                               value="@Model.numeroFactura" required readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Registro Nubox:</label>
                        <input class="form-control" value="@Model.contabilidad.registroNubox"
                               name="registroNubox" id="registroNubox"
                               type="text" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cuenta Contabilidad:</label>
                        <input class="form-control" value="@Model.contabilidad.cuenta"
                               name="cuentaContabilidad" id="cuentaContabilidad"
                               type="text" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observaciones:</label>
                        <textarea class="form-control" id="observaciones"
                                  name="observaciones">@Model.contabilidad.observaciones</textarea>
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <div class="modal-footer">
                        <a href="@Url.Action("general", "HojaRuta", new { idOrdenCompra=Model.numeroOrdenCompra})" class="btn btn-lg btn-default">Cancelar</a>
                        <button type="submit" id="boton" class="btn btn-lg btn-primary">Guardar Datos</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @section scripts{
        <script type="text/javascript">

        $("#fecha").datetimepicker({
            viewMode: 'days',
            format: 'DD/MM/YYYY'
        });

        </script>
    }
