@model sarey_erp.Models.hojaRutaFactura

@{
    ViewBag.Title = "editar datos de adquisiciones";
}

<div class="content-wrapper" style="min-height: 1000px !important;">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="header">
            <h1>Datos de Adquisición <small>Hoja de Ruta - Factura de Proveedores</small></h1>
        </div>
        <div class="clearfix"></div>
        <hr style="border-color:#000 !important" />
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <form role="form" method="post" action="@Url.Action("agregarAdquisicion", "HojaRuta")" enctype="multipart/form-data">
                    <div class="form-group">
                        <div id="divNombreNombre" class="form-group">
                            <label class="control-label">Número de Orden de Compra:</label>
                            <input type="text" class="form-control" name="numeroOrdenCompra" id="numeroOrdenCompra"
                                   value="@Model.numeroOrdenCompra" required readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Número de Factura:</label>
                        <input type="text" class="form-control" name="numeroFactura" id="numeroFactura"
                               value="@Model.numeroFactura" required readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha de Orden de Compra:</label>
                        @{
                            string año = Model.adquisiciones.fechaOrdenCompra.Year.ToString();
                            string mes = Model.adquisiciones.fechaOrdenCompra.Month.ToString();
                            if (mes.Length == 1)
                            {
                                mes = "0" + mes;
                            }

                            string dia = Model.adquisiciones.fechaOrdenCompra.Day.ToString();
                            if (dia.Length == 1)
                            {
                                dia = "0" + dia;
                            }

                            string fecha = dia + "/" + mes + "/" + año;
                        }
                        <input class="form-control" value="@fecha"
                               name="fecha" id="fecha" type="text" required readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Valor Orden de Compra:</label>
                        <input class="form-control" value="@(new sarey_erp.Models.formatearString().valoresPesos(Model.adquisiciones.valorOrdenCompra.ToString()))" name="valorOrdenCompra" type="text" required readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observaciones:</label>
                        <textarea class="form-control" id="observaciones" name="observaciones">@Model.adquisiciones.observaciones</textarea>
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <div class="modal-footer">
                        <a href="@Url.Action("general", "HojaRuta", new { idOrdenCompra=Model.numeroOrdenCompra})" class="btn btn-lg btn-default">Cancelar</a>
                        <button type="submit" id="boton" class="btn btn-lg btn-primary">Guardar Datos</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
