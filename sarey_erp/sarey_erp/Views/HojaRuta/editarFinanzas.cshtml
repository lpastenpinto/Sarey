@model sarey_erp.Models.hojaRutaFactura

@{
    ViewBag.Title = "editar datos de finanzas";
}

<div class="content-wrapper" style="min-height: 1000px !important;">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="header">
            <h1>Datos de Finanzas <small>Hoja de Ruta - Factura de Proveedores</small></h1>
        </div>
        <div class="clearfix"></div>
        <hr style="border-color:#000 !important" />
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <form role="form" method="post" action="@Url.Action("metodoAgregarFinanzas", "HojaRuta")" enctype="multipart/form-data">
                    <div class="form-group">
                        <div id="divNombreNombre" class="form-group">
                            <label class="control-label">Número de Orden de Compra:</label>
                            <input type="text" class="form-control" name="numeroOrdenCompra" id="numeroOrdenCompra"
                                   value="@Model.numeroOrdenCompra" required readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Número de Factura:</label>
                        <input type="text" class="form-control" name="numeroFactura" id="numeroFactura"
                               value="@Model.numeroFactura" required readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Modo de Pago:</label>
                        <input type="text" class="form-control" name="modoPago" id="modoPago"
                               value="@Model.formaPago" required readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Número:</label>
                        <input type="number" class="form-control" value="@Model.finanzas.numero" name="numero" id="numero"
                               required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha:</label>
                        @{
                            string año = Model.finanzas.fecha.Year.ToString();
                            string mes = Model.finanzas.fecha.Month.ToString();
                            if (mes.Length == 1)
                            {
                                mes = "0" + mes;
                            }

                            string dia = Model.finanzas.fecha.Day.ToString();
                            if (dia.Length == 1)
                            {
                                dia = "0" + dia;
                            }

                            string fecha = dia + "/" + mes + "/" + año;
                        }
                        <input class="form-control" name="fecha" id="fecha" value="@fecha"
                               data-date-format="DD/MM/YYYY" pattern="[0-9][0-9]/[0-9][0-9]/[0-9][0-9][0-9][0-9]"
                               type="text" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observaciones:</label>
                        <textarea class="form-control" id="observaciones" name="observaciones">@Model.finanzas.observaciones</textarea>
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <div class="modal-footer">
                        <a href="@Url.Action("general", "HojaRuta", new { idOrdenCompra=Model.numeroOrdenCompra})" class="btn btn-lg btn-default">Cancelar</a>
                        <button type="submit" id="boton" class="btn btn-lg btn-primary">Guardar Datos</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @section scripts{
        <script type="text/javascript">

        $("#fecha").datetimepicker({
            viewMode: 'days',
            format: 'DD/MM/YYYY'
        });

        </script>
    }
