@{
    DateTime today = DateTime.Today;

    int anio = today.Year;
    int mes = today.Month;
    int anio_anterior = anio - 1;

}

<div class="content-wrapper">
    <div class="content">
        <div class="header text-center">
            <h3>Ver Liquidaciones de Sueldo</h3>
        </div>
        <div class="col-lg-12">
            <form action="@Url.Action("verLiquidaciones", "Liquidaciones")" class="form-horizontal" role="form" method="post">
                <div class="form-group col-lg-6">
                    <label class="control-label">Mes</label>
                    <select class="form-control" name="mes" id="mes" required>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i">
                                @i
                            </option>
                        }
                    </select>
                </div>
                <div class="form-group col-lg-6">
                    <label class="control-label">A&ntilde;o</label>
                    <select class="form-control" name="anio" id="anio" required>
                        <option value="@anio">@anio</option>
                        <option value="@anio_anterior">@anio_anterior</option>

                    </select>
                </div>
                <div class="col-sm-3 col-sm-offset-9">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" id="boton">Ver Liquidaciones</button>
                </div>
            </form>
        </div>

        <br /><br /><br />

        <div class="header text-center">
            <h3>Generar Liquidaciones de Sueldo Mensual</h3>
        </div>
        <div class="col-lg-12">
            <form action="@Url.Action("todasLiquidacionesMes","Liquidaciones")" class="form-horizontal" role="form" method="post">
                <div class="form-group col-lg-6">
                    <label class="control-label">Mes</label>
                    <select class="form-control" name="mes" id="mes" required>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" @if (@i == mes) {  <text>
                                    selected
                                    </text>            } }>
                                @i
                            </option>
                        }
                    </select>
                </div>
                <div class="form-group col-lg-6">
                    <label class="control-label">A&ntilde;o</label>
                    <select class="form-control" name="anio" id="anio" required>
                        <option value="@anio">@anio</option>
                        @if (anio_anterior == (anio - 1))
                        {

                            <option value="@anio_anterior">@anio_anterior</option>
                        }

                    </select>
                </div>
                <div class="col-sm-3 col-sm-offset-9">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" id="boton">Generar Liquidaciones</button>
                </div>
            </form>
        </div>

    </div>
</div>    
